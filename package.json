{
  "name": "clown-counter-bot",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "dev": "tsx watch --env-file-if-exists=.env src/index.ts",
    "start": "tsx --env-file-if-exists=.env src/index.ts",
    "lint": "eslint . --fix",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "prepare": "simple-git-hooks && git config --local commit.template '.gitmessage'"
  },
  "dependencies": {
    "@libsql/client": "0.15.15",
    "drizzle-orm": "0.44.5",
    "grammy": "1.38.2",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@commitlint/cli": "20.0.0",
    "@commitlint/config-conventional": "20.0.0",
    "@commitlint/types": "20.0.0",
    "@cspell/dict-fa-ir": "4.0.5",
    "@cspell/dict-sql": "2.2.1",
    "@fullstacksjs/eslint-config": "13.5.0",
    "@rabits/tsconfig": "0.2.0",
    "@types/node": "24.5.2",
    "cspell": "9.2.1",
    "drizzle-kit": "0.31.5",
    "eslint": "9.36.0",
    "lint-staged": "16.2.3",
    "prettier": "3.6.2",
    "simple-git-hooks": "2.13.1",
    "tsx": "4.20.6",
    "typescript": "5.9.2"
  }
}
